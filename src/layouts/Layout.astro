---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
---

<!doctype html>
<html class="dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Sam McClenaghan - Software Developer Intern at Leanpub, pursuing Computer Science at University of Victoria. Building terminal tools, web apps, and diving into backend systems."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Sam McClenaghan</title>
    <ClientRouter />
  </head>
  <body>
    <div
      class="min-h-screen flex flex-col mx-auto px-6 pb-8 max-w-2xl"
      id="page"
    >
      <Header />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
